#!/usr/bin/env bash
#################################################
## Desc: zshrc配置文件更替脚本
## Author: 杨浩
## 使用方法：./zshc
## 时    间：2014-05-20
#################################################
MYRUNTIME=$(cat ~/.myruntime)
MYZSHCONFIG=$MYRUNTIME/oh-my-zsh
GITZSHCONFIG=$MYRUNTIME/oh-my-zsh-git
MARKFILE=$MYRUNTIME/tools/m_zsh
CURCONFIG=$(cat $MARKFILE)

source $MYRUNTIME/customs/bin/mymessage
if [ $# -ne 1 ]; then
    $0 version
    echo "请输入要是用的zsh配置"
    echo "现有 my| git版本供选择"
    read linetheme;
else
    linetheme=$1
    #if [ "$linetheme" = "v" ]; then
    #    echo '版本';
    #else
    #    rm ~/.zshrc
    #fi
fi

case "$linetheme" in
    "my")
        ln -sf $MYZSHCONFIG/zshrc ~/.zshrc
        echo "my" > $MARKFILE
        $0 version
    ;;
    "git")
        ln -sf $GITZSHCONFIG/zshrc ~/.zshrc
        echo "git" > $MARKFILE
        $0 version
    ;;
    "v"||"version")
        $0 version
    ;;
esac
