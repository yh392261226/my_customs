#!/bin/bash
########################################
## tmux -f
## Desc:tmux 根据选择使用配置文件
## Author: 杨浩
########################################
CONFIGS=/Users/json/.runtime/tmuxconfigs  #配置文件地址
EXT=tmux.conf


source $MYRUNTIME/customs/bin/mymessage
if [ -d $CONFIGS ]; then
  configs=($(ls $CONFIGS/*${EXT}))
  if [ "${#configs[*]}" != "0" ]; then
    echo "Input the NO. :";
    posit=0
    for file in ${configs[*]}; do
      echo $posit "：" $(basename ${file} | awk -F ".$EXT" '{print $1}');
      ((posit+=1))
    done
    #echo ${configs[2]}
    read conf
    if [ "$conf" -lt "${#configs[*]}" ]; then
      tmux -f ${configs[$conf]}
    else
      echo "The config you choose does not exists ！！！";
    fi
  else
    echo "No config can be found ！！！";
  fi
else
  echo "Path of config does not exists ！！！";
fi
