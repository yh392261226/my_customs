#!/bin/zsh
#################################################
## Desc:iterm2背景图文件批量重命名脚本
## 使用方法：./renamepics
## 时    间：2014-07-22
#################################################
echo "谨慎使用， 使用前先备份，多次使用相同前缀会使你的图片文件互相覆盖导致减少y|Y（使用）n|N(不使用)"
read line;
if [ "$line" = "y" ] || [ "$line" = "Y" ]; then
    echo "请输入前缀"
    read linen
  m=0
  for i in $(ls $MYRUNTIME/pictures/*(jpg|png|JPG|JPEG|Jpg|PNG|Png));
  do
    m=`expr $m + 1`
    #echo 文件名为：${i%.*}
    mv $i $MYRUNTIME/pictures/$linen-$m.${i##*.}
  done
  echo $m
fi



