#!/usr/bin/env bash
##Desc:管理自己的app
##Author:杨浩
MYAPPPATH=$MYRUNTIME/myapps
[[ -f $MYRUNTIME/customs/my_shell/library/core/bzsh/core_common.bzsh ]] && source $MYRUNTIME/customs/my_shell/library/core/bzsh/core_common.bzsh
custom_gum_show2hide_header "管理自己的app"

applists=$(ls $MYAPPPATH)
posit=0
for app in $applists; do
  applists[$posit]=$app
  ((posit+=1))
done

listApps() {
  posit=0
  echo "╭──────────────────────────────────────────────────────────────────────────────────────── -- - ･" | lolcat -f -F 0.05
  for i in ${applists[*]}; do
    if [ -d $MYAPPPATH/$i ]; then
      printf "\033[0;33m│\033[0m\033[1;32m%-60s %-18s %-14s\033[0m\n"  "|" "| $posit" "| $i" "| "
      ((posit+=1))
    fi
  done
  echo "╰──────────────────────────────────────────────────────────────────────────────────────── -- - ･" | lolcat -f -F 0.05

}

delApp() {
  if [ "$1" = "" ]; then
    listApps
    echo "Which one do you want to delete?:";
    read number;
  else
    number=$1
  fi
  if [ "$number" -lt "0" ] || [ "${applists[$number]}" = "" ]; then
    echo "Your choice does not exists !"
    return 1
  else
    trash ${applists[$number]}
  fi
  if [ "$?" = "0" ]; then
    echo "Delete Successful !"
    return 0
  else
    echo "Delete Failure !"
    return 1
  fi
}

openApp() {
  if [ "$1" = "" ]; then
    listApps
    echo "Which one do you want to open?:";
    read number;
  else
    number=$1
  fi
  if [ "$number" -lt "0" ] || [ "${applists[$number]}" = "" ]; then
    echo "Your choice does not exists !"
    return 1
  else
     open -a ${applists[$number]}
  fi
  return 0
}

helpApp() {
  echo "╭──────────────────────────────────────────────────────────────────────────────────────── -- - ･
│ 使用方法: ${0##*/} [command(可用命令)]
╰──────────────────────────────────────────────────────────────────────────────────────── -- - ･" | lolcat -f -F 0.05
echo "╭──────────────────────────────────────────────────────────────────────────────────────── -- - ･
│ 使用方法: ${0##*/} [command]
│ command(可用命令):
│  list      / l   列表
│  del       / d   删除
│  open      / o   打开
│  help      / h   帮助
╰──────────────────────────────────────────────────────────────────────────────────────── -- - ･" | lolcat -f -F 0.05
}

# source $MYRUNTIME/customs/bin/mymessage

case "$1" in
  "list"|"l")
    listApps
    ;;
  "open"|"o")
    openApp $2
    ;;
  "delete"|"del"|"d")
    delApp $2
    ;;
  "help"|"h"|*)
    helpApp
    echo ""
    listApps
    ;;
esac
