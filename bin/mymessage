#!/bin/bash
## Desc: 消息插入
## Author: 杨浩
myMessage() {
  clear
  _COLUMNS=$(tput cols)
  source $MYRUNTIME/tools/m_title
  y=$(( ( $_COLUMNS - ${#_TITLE} )  / 2 ))
  spaces=$(printf "%-${y}s" " ")
  echo " "
  echo -e "${spaces}\033[41;37;5m ${_TITLE} \033[0m"
  echo " "


  _COLUMNS=$(tput cols)
  source $MYRUNTIME/tools/m_message
  y=$(( ( $_COLUMNS - ${#_MESSAGE} )  / 2 ))
  spaces=$(printf "%-${y}s" " ")
  echo -e "${spaces}${_MESSAGE}"
  echo " "
  for ((i=1; i<=$(tput cols); i ++))  ; do echo -n '*';done

  echo " "
}

myMessage
