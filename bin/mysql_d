#!/bin/bash
## Desc:mysql 管理器
## Author: 杨浩
if [ $# -ne 1 ]; then
    echo "Usage: $0 start| stop| restart"
    exit 0
fi

case "$1" in
    "start")
        #mysql.server start
        brew services start mysql
    ;;
    "stop")
        #mysql.server stop
        brew services stop mysql
    ;;
    "restart")
        #mysql.server restart
        brew services restart mysql
    ;;
    "status")
        #mysql.server status
        brew services status mysql
    ;;
    "login")
        /usr/local/bin/mycli -uroot -pyanghao1017 -h127.0.0.1 -P3306
    ;;
esac
