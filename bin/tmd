### check if the arg is number
checkInt() {
  if [ "$1" = "" ]; then
      return 1
  fi
  if grep '^[[:digit:]]*$' <<< "$1"; then
      return 0
  else
      return 1
  fi
}

chose_what_todo() {
    if [ "" eq 0 ]; then
        echo "Go and fuck yourself !!!"
        exit 0
    fi

}
