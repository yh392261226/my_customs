#!/usr/bin/env bash

# python文件所在目录
LIBPATH=$MYRUNTIME/customs/others/new_preader_python
PYBIN=/opt/homebrew/bin/python3
TEXTUALBIN=/opt/homebrew/bin/textual

has_web=false
for arg in "$@"; do
	if [ "$arg" = "--web" ]; then
		has_web=true
		break
	fi
done

if $has_web; then
	echo "Web Mode Started. Enjoy!"
	open "http://localhost:8000"
fi
$PYBIN $LIBPATH/main.py "$@"
