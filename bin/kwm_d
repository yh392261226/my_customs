#!/bin/bash
## Desc:kwm 管理器
## Author: 杨浩
if [ $# -ne 1 ]; then
    echo "Usage: $0 start| stop| restart"
    exit 0
fi

case "$1" in
    "start")
        brew services start homebrew/binary/kwm
    ;;
    "stop")
        brew services stop homebrew/binary/kwm
    ;;
    "restart")
        brew services restart homebrew/binary/kwm
    ;;
    "status")
    ps -ef|grep kwm
    ;;
esac
