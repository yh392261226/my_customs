#!/usr/bin/env bash

COMMANDBIN=/Applications/IINA.app/Contents/MacOS/iina-cli
[[ -f $MYRUNTIME/customs/my_shell/library/core/bzsh/core_common.bzsh ]] && source $MYRUNTIME/customs/my_shell/library/core/bzsh/core_common.bzsh
custom_gum_show2hide_header "播放器IINA"

VIDEOPATH="${1-$(user_input '请输入视频地址: ' '')}"

if [ "" != "$VIDEOPATH" ]; then
	$COMMANDBIN $VIDEOPATH --volume=20 --no-resume-playback
fi
