#!/bin/bash
#### move the current background image of the iterm2 to the trash
## Desc: 在iterm中原图显示当前iterm的背景图
## Author: 杨浩
#rm -f $(cat $MYRUNTIME/tools/current_picturename)
bgfile=$(sed s/[[:space:]]//g $MYRUNTIME/tools/current_picturename)
if [ ! -f "$bgfile" ]; then
	echo "No bg at the current time!";exit 1
elif [ "$1" = "name" ] || [ "$1" != "" ]; then
	echo $bgfile
else
	$HOME/.iterm2/imgcat $bgfile
fi
