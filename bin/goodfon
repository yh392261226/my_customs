#!/usr/bin/env bash
########################################
## Desc: 火狐浏览器打开goodfon
## Author: 杨浩
########################################
DEFAULTBROWSER="/Applications/Firefox.app"      #default browser for open goodfon
SECONDBROWSER="/Applications/Google Chrome.app" #second browser for open goodfon
URL="https://www.goodfon.ru/"

if [ "$1" = "" ]; then
    [[ -d "$DEFAULTBROWSER" ]] && /usr/bin/open -a "$DEFAULTBROWSER" "$URL"
fi

if [ "$1" != "" ] || [ "$1" = "chrome" ] || [ "$1" = "google" ]; then
    [[ -d "$SECONDBROWSER" ]] && /usr/bin/open -a "$SECONDBROWSER" "$URL"
fi