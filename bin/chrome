#!/usr/bin/env bash
########################################
## Desc: Google Chrome浏览器打开网址
## Author: 杨浩
########################################
BROWSERPATH="/Applications/Google Chrome.app"
DEFAULTURL="https://www.google.com/"

[[ ! -d "$BROWSERPATH/" ]] && echo "Does not found Chrome " && exit 1

[ "" = "$1" ] && url=$DEFAULTURL || url=$1

if [ ! -f $url ]; then
    if [ "${url:0:6}" != "http://" ] && [ "${url:0:7}" != "https://" ]; then
        url="http://$url"
    fi
fi
/usr/bin/open -a "$BROWSERPATH" "$url"