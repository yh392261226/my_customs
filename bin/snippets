case "$1" in
	"edit"|"--edit"|"-edit"|"e"|"--e"|"-e")
		nvim $0
    ;;
    "help"|"--help"|"-help"|"h"|"--h"|"-h")
        echo "Usage: snippets edit/e | help/h | list/l"
		echo "添加记录时候请注意, 介绍与命令之间使用一个TAB分割"
	;;
	"list"|"l"|*)
		cat $0 | grep '#!!' | grep -v 'skipthisline' | awk -F'\t' '{printf "%-40s%-20s%10s\n", $1, $2, $3}' | \
		fzf $FZF_CUSTOM_PARAMS --preview \
		'if [[ "" != {3..} ]]; then; \
		echo ""; \
		echo "⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯";\
		echo "Command |⋯▶  "{3..};\
		echo "⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯⋯";\
		else;\
		if [[ "" != {2} ]] && ([[ {2} != ----* ]] || [[ ! {2} =~ ---- ]]); then; #括号中的两个判断之一即可,两个的作用相同\
		echo "分类:"{2};\
		fi;  \
		fi;'  \
    --no-multi \
		--bind 'ctrl-y:execute-silent(echo -n {3..} | pbcopy)+abort' \
		--bind 'enter:become(eval {3..})' \
		--color header:italic \
		--bind 'focus:transform-preview-label:if [[ "" != {2} ]] && [[ ! {2} =~ ---- ]]; then; echo {2}; fi;' \
        --header-first \
		--header $' Snippet Selector\n CTRL-Y 复制内容 | CTRL-/ 切换预览窗口 | CTRL-S 切换排序' #skipthisline
	;;
esac
