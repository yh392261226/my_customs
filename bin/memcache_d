#!/bin/bash
###Desc:memcached 管理器
###Author:杨浩
if [ $# -ne 1 ]; then
    echo "Usage: $0 start| stop| restart"
    exit 0
fi

case "$1" in
    "start")
        brew services start memcached
    ;;
    "stop")
        brew services stop memcached
    ;;
    "restart")
        brew services restart memcached
    ;;
    "status")
    ps -ef|grep memcached
    ;;
esac
