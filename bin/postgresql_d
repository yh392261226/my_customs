#!/bin/env bash
###Desc:postgresql管理器
###Author:杨浩
if [ $# -ne 1 ]; then
    echo "Usage: $0 start| stop| restart"
    exit 0
fi

case "$1" in
    "start")
        pg_ctl -D /usr/local/var/postgres start
    ;;
    "stop")
        pg_ctl -D /usr/local/var/postgres stop
    ;;
    "restart")
        pg_ctl -D /usr/local/var/postgres restart
    ;;
    "status")
    ps -ef|grep redis
    ;;
esac
