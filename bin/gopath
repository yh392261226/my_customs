#!/bin/bash

###work director file
dirmarks=$MYRUNTIME/customs/bin/work_director
tmpcommand=$MYRUNTIME/custom/bin/gopath_command

if [ $# -ne 1 ]; then
  echo "Usage: $0 work|record|learn";
  exit 0
fi

if [ -f $workdir ]; then
  source $dirmarks

  case "$1" in
    work)
      echo "cd $working" > $tmpcommand
      ;;
    record)
      echo "cd $recording" > $tmpcommand
      ;;
    learn)
      echo "cd $learnning" > $tmpcommand
      ;;
  esac
fi

/bin/chmod +x $tmpcommand
/bin/bash $tmpcommand
