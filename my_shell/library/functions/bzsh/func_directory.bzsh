}
alias pwdw="pwd_command_directory"  # Desc: alias: pwdw:pwd_command_directory命令的别名,获取命令所在的文件夹

function fzf_directories_or_files() { # Desc: function: fzf_directories_or_files:fzf列出当前目录下所有的文件或文件夹,可根据快捷键切换
    find * | fzf --prompt 'All> ' \
             --header 'CTRL-D: Directories / CTRL-F: Files' \
             --bind 'ctrl-d:change-prompt(Directories> )+reload(find * -type d)' \
             --bind 'ctrl-f:change-prompt(Files> )+reload(find * -type f)'
}
alias fdof='fzf_directories_or_files'   # Desc: alias: fdof:fzf_directories_or_files命令的别名,fzf列出当前目录下所有的文件或文件夹,可根据快捷键切换

function fzf_directory_history() { # Desc: function: fzf_directory_history:利用fzf显示目录的历史
  local dir=$(python3 -m fzfdirhist show | fzf --height=40% --reverse +m)
  cd "$dir"
}
alias fdh='fzf_directory_history'   # Desc: alias: fdh:fzf_directory_history命令的别名,利用fzf显示目录的历史

function fzf_remove_directory() { # Desc: function: fzf_remove_directory:find找出文件夹选中删除
  if [[ "$#" -eq 0 ]]; then
    local directories
    directories=$(find . -maxdepth 1 -type d | fzf --multi)
    echo $directories | xargs -I '{}' rm -rf {} #we use xargs to capture filenames with spaces in them properly
  else
    gum confirm "确认删除?" && command rm -rf "$@" || echo "Action aborted !"
  fi
}
alias frd="fzf_remove_directory"     # Desc: alias:frd:fzf_remove_directory的别名,find找出文件夹选中删除