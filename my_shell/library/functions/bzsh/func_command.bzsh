function file_tree() { # Desc: function: file_tree:tree命令
	path='./'
	[[ "" != "$1" ]] && path=$1
	ls -R $path | grep ":$" | sed -e 's/:$//' -e 's/[^-][^\/]*\//--/g' -e 's/^/ /' -e 's/-/|/'
}
alias filetree="file_tree"  # Desc: alias: filetree:file_tree命令的别名

