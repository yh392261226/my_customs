    [[ ! -d $MDDIR ]] && echo "请先下载https://github.com/drawdb-io/drawdb?tab=readme-ov-file" && return 1
    customcd $MDDIR
    npm install
    npm run dev
}
alias ddb="drawdb"                                                              # Desc: alias: ddb: drawdb命令的别名,Free, simple, and intuitive database design tool and SQL generator.

