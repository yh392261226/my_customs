/* 输入对话框样式 */
#input-dialog {
    width: 60;
    height: auto;
    background: $surface;
    border: solid $primary;
    padding: 1 2;
}

#input-title {
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
}

#input-prompt {
    color: $text;
    margin-bottom: 1;
}

#input-field {
    width: 100%;
    height: 3;
    margin-bottom: 1;
}

#input-buttons {
    align: center middle;
    height: auto;
}

#input-buttons Button {
    margin: 0 1;
    min-width: 8;
}