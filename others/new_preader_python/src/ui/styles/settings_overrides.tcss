/* Settings screen minimal overrides (page-specific styles only) */
Header {
    dock: top;
    width: 100%;
    height: 1;
    background: $background;
    color: $accent;
    text-align: left;
    align: left middle;
    content-align: left middle;
}

Footer {
    height: 1;
    width: 100%;
    dock: bottom;
}

#settings-container {
    width: 100%;
    height: 100%;
    layout: vertical;
    min-height: 40;
}


#settings-title-container {
    height: 4;
    width: 100%;
    margin: 0;
    color: $accent;
}

.settings-title {
    text-align: left;
    color: $accent;
    text-style: bold;
    height: 3;
}

/* 控制按钮区域：布局/对齐由 .btn-row 提供，这里仅保留尺寸与外观 */
#settings-controls {
    width: 100%;
    height: 5;
    background: $panel;
    border-top: solid $primary;
}

#settings-controls Button {
    margin: 0 1;
    min-width: 10;
    height: 3;
}

/* 快捷键状态栏（保持页面自定义布局与配色） */
#settings-shortcuts-bar {
    width: 100%;
    height: 2;
    /* 使用 .status-bar 控制布局与居中 */
    background: $panel-darken-1;
}

#settings-shortcuts-bar Label {
    margin: 0 2;
    text-style: italic;
    color: $text-muted;
}

/* 标签页容器滚动区域 */
#settings-container ScrollableContainer {
    width: 100%;
    height: 90%;
}

/* 设置项标签与控件尺寸 */
#settings-container .setting-label {
    width: 100%;
    height: 1;
    margin: 1 0;
}

#settings-container Select {
    width: 20%;
    min-width: 10;
    height: 5;
    margin: 1 0;
}

#settings-container Input {
    width: 20%;
    min-width: 10;
    height: 3;
    margin: 1 0;
}

#settings-container Switch {
    width: 20%;
    min-width: 10;
    height: 3;
    margin: 1 0;
}

#settings-container TabbedContent {
    height: 75%;
}